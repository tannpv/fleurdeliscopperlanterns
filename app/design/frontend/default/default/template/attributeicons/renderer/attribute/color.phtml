<?php
	$_content = $this->getContent();
	$_helper = Mage::helper('attributeicons');
	$iconDimensions = $_helper->getDimensions('icon');
?>
<?php if(count($_content)):?>
	<?php foreach($_content as $_item):?>
		<?php if(isset($_item['icon'])):?>
		<div class="has-icon">
			<img src="<?php echo $_helper->getImageUrl($_item['icon']);?>" alt="<?php echo $_item['description']?>" title="<?php echo $this->getValue();?>"/>
			<?php if($_item['show_both']):?>
				<span class="text-value"><?php echo $_item['original_value'];?></span>
			<?php endif;?>
			<span style="display:none;" class="description"><?php echo $_item['description'];?></span>
		</div>
		<?php else:?>
		<div class="no-icon">
			<span class="text-value"><?php echo $_item['original_value'];?></span>
		</div>
		<?php endif;?>
	<?php endforeach;?>
<?php endif;?>