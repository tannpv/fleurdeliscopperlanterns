<config>
	<tabs>
		<magmodules translate="label" module="colorbox">
			<label>Magmodules</label>
			<sort_order>200</sort_order>
		</magmodules>
	</tabs>
	<sections>
		<colorbox translate="label" module="colorbox">
			<label>Colorbox</label>
			<tab>magmodules</tab>
			<header_css>mm-moduleheader</header_css>			
			<frontend_type>text</frontend_type>
			<sort_order>40</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>			
			<groups>
                <settings translate="label">
                    <label>General settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
		            <expanded>1</expanded>	                    
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
						<jquery translate="label">
                            <label>Include jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>colorbox/system_config_source_jquery</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jquery>                        
                    </fields>
                </settings>
                <theme translate="label">
                    <label>Theme</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
		            <expanded>1</expanded>	                    
                    <fields>                
                        <theme translate="label">
                            <label>Colorbox theme</label>
                            <frontend_type>select</frontend_type>
                            <source_model>colorbox/system_config_source_theme</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </theme>
                        <transition translate="label">
                            <label>Transition</label>
                            <frontend_type>select</frontend_type>
                            <source_model>colorbox/system_config_source_transition</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transition>  
                        <transition_speed translate="label">
                            <label>Transition speed</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transition_speed>                                                   
					</fields>
				</theme>
                <image translate="label">
                    <label>Image size</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
		            <expanded>1</expanded>	                    
                    <fields>                
                        <size_main translate="label comment">
                            <label>Size of main image</label>
                            <comment>Size in pixels width_height. (Default 265_265)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </size_main>
                        <size_popup translate="label comment">
                            <label>Size of popup image</label>
                            <comment>Size in pixels width_height. (Default 500_500)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </size_popup>
                        <size_thumb translate="label comment">
                            <label>Size of additional images</label>
                            <comment>Size in pixels width_height. (Default 60_60)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </size_thumb>                                                  
					</fields>
				</image>						                
            </groups>
        </colorbox>
    </sections>
</config>